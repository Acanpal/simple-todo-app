// データベースの種類と保存先の設定
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
// Prismaクライアント(操作用コード)の生成設定
generator client {
  provider = "prisma-client-js"
}
// データモデルの定義
model Todo {
  id        Int      @id @default(autoincrement()) // 自動で増えるID (1, 2, 3...)
  title     String   // Todoの内容
  completed Boolean  @default(false) // 完了状態 (推奨追加)
  order     Int      @default(0)     // 並び順 (Reorder機能用)
  createdAt DateTime @default(now()) // 作成日時
  updatedAt DateTime @updatedAt      // 更新日時
}